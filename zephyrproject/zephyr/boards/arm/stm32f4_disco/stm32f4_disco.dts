/dts-v1/;
#include <st/f4/stm32f407Xg.dtsi>

/ {
	model = "STMicroelectronics STM32F4DISCOVERY board";
	compatible = "st,stm32f4discovery", "st,stm32f407";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,ccm = &ccm0;
	};

	leds {
		compatible = "gpio-leds";
		orange_led_3: led_3 {
			gpios = <&gpiod 13 GPIO_ACTIVE_HIGH>;
			label = "User LD3";
		};
		green_led_4: led_4 {
			gpios = <&gpiod 12 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
		red_led_5: led_5 {
			gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
			label = "User LD5";
		};
		blue_led_6: led_6 {
			gpios = <&gpiod 15 GPIO_ACTIVE_HIGH>;
			label = "User LD6";
		};
		engine_input1: engine_in1 {
			gpios = <&gpioa 1 GPIO_ACTIVE_LOW>;
			label = "Engine Input 1";
		};
		engine_input2: engine_in2 {
			gpios = <&gpioa 2 GPIO_ACTIVE_LOW>;
			label = "Engine Input 2";
		};
		engine_input3: engine_in3 {
			gpios = <&gpioa 3 GPIO_ACTIVE_LOW>;
			label = "Engine Input 3";
		};
		engine_input4: engine_in4 {
			gpios = <&gpioa 4 GPIO_ACTIVE_LOW>;
			label = "Engine Input 4";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "Key";
			gpios = <&gpioa 0 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		can-primary = &can2;
		led0 = &green_led_4;
		led1 = &orange_led_3;
		led2 = &red_led_5;
		led3 = &blue_led_6;
		sw0 = &user_button;
		in1 = &engine_input1;
		in2 = &engine_input2;
		in3 = &engine_input3;
		in4 = &engine_input4;
		pwm1 = &timers1;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&timers2 {
	status = "okay";

	pwm {
		status = "okay";
	};
};

&timers3 {
	status = "okay";

	pwm {
		status = "okay";
	};
};


&rtc {
	status = "okay";
};

&usbotg_fs {
	status = "okay";
};

&can1 {
	bus-speed = <125000>;
	status = "okay";
};

&can2 {
	bus-speed = <125000>;
	status = "okay";
};
